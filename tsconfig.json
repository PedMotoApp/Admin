{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "skipLibCheck": true, // Skip type checking for node_modules to avoid conflicts
    "types": ["googlemaps"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "dom", "es2015.core", "es2015.promise"], // Add es2015.core and es2015.promise
    "module": "commonjs", // Use commonjs for Ionic 3
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/__tests__/*.ts"],
  "compileOnSave": false,
  "atom": { "rewriteTsconfig": false }
}